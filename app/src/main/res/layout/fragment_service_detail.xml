<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.services.ServiceDetailFragment"
    android:paddingVertical="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="User Name"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20dp"
        android:textColor="@color/bu_black"
        />
    <TextView
        android:id="@+id/dollarSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="32sp"
        android:textColor="@color/bu_red"
        android:textStyle="bold"
        android:text="$"
        android:layout_marginRight="70sp"
        />
    <TextView
        android:id="@+id/serviceRateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/dollarSign"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="32sp"
        android:textColor="@color/bu_red"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
    />
    <LinearLayout
        android:id="@+id/majorLinearView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userNameTextView"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/major"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/bu_black"/>
        <TextView
            android:id="@+id/majorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/major_placeholder"
            android:textColor="@color/bu_black"/>
    </LinearLayout>
    <TextView
        android:id="@+id/descriptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/majorLinearView"
        android:layout_marginTop="10dp"
        android:text="@string/service_detail_description"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:textColor="@color/bu_black"/>
    <EditText
        android:id="@+id/serviceDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTitle"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:lines="10"
        android:focusable="false"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:cursorVisible="false"
        android:scrollbarStyle="insideInset"
        android:background="@null"
        />
    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/serviceDescriptionTextView"
        android:layout_marginTop="10dp"
        android:text="@string/location"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:textColor="@color/bu_black"/>
<!--    <com.google.android.gms.maps.MapView-->
<!--        android:id="@+id/mapView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="200dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/locationTitle"-->
<!--        android:layout_marginTop="10dp"-->
<!--        />-->
    <Button
        android:id="@+id/sendMessageButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/send_message"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

