<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/neutral_80</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/neutral_100</item>
        <item name="tint">@color/bu_red</item>
        <item name="borderWidth">2dp</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/bu_black</item>
        <item name="colorControlActivated">@color/bu_red</item>
        <item name="android:textSize">14dp</item>
    </style>



</resources>